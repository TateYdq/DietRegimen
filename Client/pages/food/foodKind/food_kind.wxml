      <view class='content'>
        <block wx:for="{{foodArray}}" wx:key="id">
          <view class='item' bindtap='seeRecDetail'>
            <view>
              <image src="{{item.photoPath}}" style=''> </image>
            </view>
            <view class='desc'>
              <view class="above">
                <view class="title2">{{item.kindName}}</view>
                <view class="count2">
                  <view class="browse">{{item.viewCount}} 浏览</view>
                  <view class="collect">{{item.collectCount}} 收藏</view>
                </view>
              </view>
                <view class="below">{{item.kindInfo}}</view>
            </view>
          </view>  
          <!-- <view class="hr2"></view> -->
        </block>  
      </view>
      <!-- <view class="more">查看更多</view> -->
		</view>

    

      <!-- 新闻列表 -->
		<view class="section section-big discount">
			<view class="title">每日新闻</view>
      <view class='content'>
        <block wx:for="{{foodArray}}" wx:key="id">
          <view class='item' bindtap='seeNewsDetail'>
            <view>
              <image src="{{item.photoPath}}" style=''> </image>
            </view>
            <view class='desc'>
              <view class="above">
                <view class="title2">{{item.kindName}}</view>
                <view class="count2">
                  <view class="browse">{{item.viewCount}} 浏览</view>
                  <view class="collect">{{item.collectCount}} 收藏</view>
                </view>
              </view>
                <view class="below">{{item.kindInfo}}</view>
            </view>
          </view>  
        </block>  
      </view>
      <!-- <view class="more">查看更多</view> -->
		</view>


