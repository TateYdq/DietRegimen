page {
	height: 100%;
}
.container {
	height: 100%;
  margin: 0rpx 50rpx;
  /* background-color: rgb(255, 255, 182);  */
}

/* 滑动条 */
scroll-view {
	height: 100%;
}
/*隐藏滚动条*/
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

/* 顶部 搜索框 */
.header {
	position: fixed;
	display: -webkit-flex;
	left: 0;
	top: 0;
	width: 100%;
  padding: 20rpx 50rpx;
	box-sizing: border-box;
	z-index: 1;
	-webkit-transition: background 0.5s ease-in-out;
  background:white;
}
.header .icon {
	width: 40rpx;
	height: 40rpx;
	vertical-align: center;
  padding-right: 10rpx;
}
.header .arraw{
  width: 40rpx;
	height: 40rpx;
  padding-right:10rpx;
  margin-left: auto;
}
.header .search {
  display: flex;  
  flex-direction: row;
    align-items: center;
	-webkit-flex: 1;
	color: #888;
	font-size: 30rpx;
	line-height: 40rpx;
	padding: 10rpx;
	border-radius: 30rpx;
	background: #fff;
  /* -webkit-box-shadow: 0px 5px 30px -10px rgb(185, 185, 185); */
	border: 1rpx solid #aaa;
}

/* 轮播图 */
.banner {
	height: 560rpx;
  /* 我手机600，iPhone 7 plus 530 */
  margin: 130rpx 0rpx 20rpx; 
  
  background: white;
}
.banner image {
	width: 100%;
  /* background: yellow; */
  border-radius: 20rpx;
  -webkit-box-shadow: 0px 40px 40px -30px rgb(168, 168, 168);
}

